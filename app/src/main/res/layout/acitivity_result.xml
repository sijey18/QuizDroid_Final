<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/highscore_raw_bck"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="40dp"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result_text_High_Score"
            android:text="Deine erreichten Punkte:"
            android:textSize="40sp"
            android:textColor="#ee4c3e"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:paddingStart="15dp"
            android:padding="5dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/result_total_Ques"
            android:text=" "
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#ee4c3e"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_marginBottom="97dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />



        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="150dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/result_bt_playAgain"
                android:text="Neustart"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginEnd="10dp"
                android:padding="20dp"
                android:background="@drawable/spielseite_bestaetigen_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/result_bt_mainmenu"
                android:text="Start MenÃ¼"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:layout_marginStart="10dp"
                android:textSize="22sp"
                android:padding="10dp"
                android:background="@drawable/spielseite_bestaetigen_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>